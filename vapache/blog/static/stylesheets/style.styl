@require "./data.styl"

//General
body
  background-color grey
  background-image url("/static/img/background-image-min.jpeg")
  background-repeat no-repeat
  background-attachment fixed
  background-position center
  background-size cover
  @media(max-width xs-max)
    background-image none

h1
  color white
  font-size 4em
  margin: 0

h2, h3
  background-color orange
  color white
  font-family main-font
  padding: 0.5em

h2
  font-size: 2em
  @media(max-width xs-max)
    font-size: 1.25em

h3
  font-size: 1.5em
  @media(max-width xs-max)
    font-size: 1em

text, a
  text-align justify
  font-size 1em
  @media(max-width xs-max)
    font-size .8em

//Header
.jumbotron
  background-color  wine
  border-radius 0
  margin 0em
  font-family main-font
  padding 1.5em 3em
  text-align left
  p
    color orange
    font-size 1.25em
    margin 0
  @media(max-width xs-max)
    padding 1em
    text-align center
    h1
      font-size 2.5em
    p
      font-size .8em

//logo dimension
.logo
  float right
  padding 1em
  padding-right 4em
  height 9.5em
  margin 0
  width auto
  @media(max-width sm-max)
    display none

//Navigation bar

.navbar-bar
  display flex
  list-style-type: none;
  margin: 0;
  padding: 0;
  background-color: beige;
  li
    & a
      font-family main-font-light
      display block
      color black
      padding 0.5em 2em
      text-decoration none
      font-size 1em
      transition(.25s)
      @media(max-width xs-max)
        font-size 1.25em
        padding 0.15em 0.5em 0.05em 0.5em
      &.active
        background-color orange
        color white
        font-weight: bold;
        @media(max-width xs-max)
          background-color beige
          color orange
      &:hover:not(.active)
        background-color grey
        color white
      &:focus
        background-color beige
        color orange
  @media(max-width xs-max)
    justify-content space-around

.navbar-menu-tag
  @media(max-width xs-max)
    display none

//Body
.container
  background-color white
  padding 0
  min-height: 100%;
  height: 100%;

.content
  padding: 1em 1.5em 2em 1.5em
  @media(max-width xs-max)
    padding: .5em

//Tout les articles

.article-footer
  display flex
  flex-direction row-reverse
  align-items flex-end
  justify-content space-between
  padding .5em 0
.article-read-more
  color white
  background-color orange
  font-size: 1.2em
  font-family: main-font-light
  border-style none
  padding .05em .3em
  transition(.15s)
  &:hover
    background-color wine
    color orange
  &:focus
    color white

.article-button
  color white
  background-color orange
  border-radius 50%
  font-size: 1.2em
  font-family: main-font-light
  border-style none
  padding .5em .5em .3em .45em
  margin-left: .25em
  transition(.15s)
  &:hover
    background-color wine
    color orange
  &:focus
    color white

