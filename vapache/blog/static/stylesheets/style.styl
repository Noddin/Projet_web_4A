@require "./data.styl"

//General
body
  background-color grey
  background-image url("/static/img/background-image-min.jpeg")
  background-repeat no-repeat
  background-attachment fixed
  background-position center
  background-size cover
  @media(max-width xs-max)
    background-image none


//Header
.jumbotron
  background-color  wine
  border-radius 0
  margin 0em
  font-family main-font
  padding 1.5em 3em
  h1
    color white
    font-size 4em
  p
    color orange
    font-size 1.25em
    margin 0
  @media(max-width sm-max)
    padding 1em
  @media(max-width xs-max)
    h1
      font-size 2em
    p
      font-size 0.7em

//logo dimension
.logo
  float left
  padding 1em
  height: 9.5em
  margin 0
  width auto
  @media(max-width sm-max)
    display none

//Navigation bar

.navbar-bar
  display flex
  list-style-type: none;
  margin: 0;
  padding: 0;
  background-color: beige;
  li
    & a
      font-family main-font-light
      display block
      color black
      padding 0.5em 2em
      text-decoration none
      font-size 1em
      transition(.5s)
      @media(max-width xs-max)
        font-size 0.7em
        padding 0.5em 0.7em
      &.active
        background-color orange
        color white
        font-weight: bold;
      &:hover:not(.active)
        background-color grey
        color white

//Body
.container
  background-color white
  padding 0

.content
  padding: 2em 1.5em
